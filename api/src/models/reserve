const { DataTypes } = require("sequelize");
// Exportamos una funcion que define el modelo
// Luego le injectamos la conexion a sequelize.
module.exports = (sequelize) => {
  // defino el modelo
  sequelize.define("reserve", {
    nameHotel: {
      type: DataTypes.STRING,
      allowNull: false,
    },
    nameRoom: {
      type: DataTypes.STRING,
      allowNull: false,
    },
    price: {
      type: DataTypes.STRING,
      allowNull: false,
    },
    user: {
      type: DataTypes.STRING,
      allowNull: false,
    },
    check_in: {
      type: Date,
      min: Date(),
    },
    check_out: {
      type: Date,
    },
  });
};
